@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<esercizioUnikey.Areas.AreaPersona.Controllers.Resource.CreateOrderResource>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">

<h1>SELEZIONA I PRODOTTI DA AGGIUNGERE ALL'ORDINE</h1>  

   <table>
        @using (@Html.BeginForm("CreateOrder", "Home", FormMethod.Post))
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>Product Name:</td>
                    <td>@Html.TextBoxFor(model => Model[i].Nome)</td>
                </tr>
                <tr>
                    <td>Product Price:</td>
                    <td>@Html.TextBoxFor(model => Model[i].Prezzo)</td>
                </tr>
                <tr>
                    <td>Product Selziona</td>
                    <td>@Html.CheckBoxFor(model => Model[i].Selected)</td>
                </tr>        
            }
            <td><input type="submit" value="Edit This Whole Row"></td>
        }
    </table>