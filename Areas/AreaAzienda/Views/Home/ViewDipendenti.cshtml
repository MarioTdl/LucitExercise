@model List<esercizioUnikey.Areas.AreaAzienda.Controllers.Resource.DipendenteResource>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

<div class="container">
	<div class="row">
        <div class="col-md-12">
        <h4>Lista Dipendenti</h4>
        <div class="table-responsive">    
              <table id="mytable" class="table table-bordred table-striped">    
                  <thead>
                   
                   <th>DataAssunzione</th>
                    <th>Name</th>
                      
                       <th>Delete</th>
                   </thead>
    <tbody>  
     @foreach (var dipendente in Model)
     {
       <form asp-controller="Home" asp-area="AreaAzienda" method="post" asp-action="Delete" asp-route-model="@dipendente">
    <tr>
      <input class="form-control" asp-for="@dipendente.Id" required type="hidden" value="@dipendente.Id">
      <input class="form-control" asp-for="@dipendente.DataAssunzione" required type="hidden" value="@dipendente.DataAssunzione">
      <input class="form-control" asp-for="@dipendente.CompanyId" required type="hidden" value="@dipendente.CompanyId">
       <input class="form-control" asp-for="@dipendente.Name" required type="hidden" value="@dipendente.Name">
    <td >@dipendente.DataAssunzione</td>
    <td>@dipendente.Name</td>
    <td>
    <button  type="submit" class="btn btn-danger btn-xs" data-title="Delete"  ><span class="glyphicon glyphicon-trash"></span></button>
   </td>
    </tr>
     </form>
    }
    </tbody>
      </table>
        </div>
	</div>
</div>

