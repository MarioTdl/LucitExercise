@model esercizioUnikey.Controllers.Resource.FormInput;

<div class="login">
	<h1>Login</h1>
    <form method="post" asp-controller="Home" asp-action="Login" >
    	<input type="text"  asp-for="Username" name="username" placeholder="Username" required="required" />
        <input type="password" asp-for="Password" name="password" placeholder="Password" required="required" />
        <button type="submit" class="btn btn-primary btn-block btn-large">Login</button>
    </form>
</div>